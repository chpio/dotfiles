[user]
  name = Thomas Heck
  email = t.heck@neonaut.de

[push]
  default = current

[core]
  excludesfile = ~/.gitignoreglobal
	pager = less -x2
[merge]
	tool = meld

[alias]
	s = status
	a = add
	c = commit
	ca = commit --amend
	m = !~/gitmeld
	d = diff
	co = checkout
	rs = reset
  rb = rebase
  ps = push
	pl = pull
	plr = pull --rebase
	sps = svn dcommit
	spl = svn rebase
	hi = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short

